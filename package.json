{
  "name": "conan-extension",
  "displayName": "conan-extension",
  "description": "conan v2.0 VScode Extension",
  "version": "0.0.5",
  "repository": "https://github.com/konicyQWQ/conan-extension",
  "icon": "img/icon.png",
  "publisher": "konicy",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:conanfile.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "conan.install",
        "title": "Install Dependencies (conan install ...)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "conan-extension",
          "title": "Conan Extension",
          "icon": "img/icon.svg"
        }
      ]
    },
    "views": {
      "conan-extension": [
        {
          "id": "conanDependencies",
          "name": "Conan Dependencies"
        }
      ]
    },
    "languages": [
      {
        "id": "conanfile",
        "extensions": [
          "conanfile.txt"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "conanfile",
        "scopeName": "source.conanfile",
        "path": "./syntaxes/conanfile.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Conan-Extension Configuration",
      "properties": {
        "conan-extension.installArgs": {
          "type": "array",
          "default": [
            "-of build",
            "-b missing"
          ],
          "description": "custom arguments when running conan install"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "yamljs": "^0.3.0"
  }
}
