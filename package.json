{
  "name": "conan-extension",
  "displayName": "conan-extension",
  "description": "conan v2.0 VScode Extension",
  "version": "0.0.2",
  "repository": "https://github.com/konicyQWQ/conan-extension",
  "icon": "img/icon.png",
  "publisher": "konicy",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:conanfile.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "conan.install",
        "title": "Install Dependencies (conan install ...)"
      }
    ],
    "languages": [
      {
        "id": "conanfile",
        "extensions": [
          "conanfile.txt"
        ]
      }
    ],
    "grammars": [
      {
        "language": "conanfile",
        "scopeName": "source.conanfile",
        "path": "./src/syntaxes/conanfile.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}